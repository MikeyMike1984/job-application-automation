.env# Application
ENVIRONMENT=development
APP_NAME=Job Application Automation
APP_VERSION=0.1.0
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database
APP_DATABASE__URI=mongodb://localhost:27017
APP_DATABASE__NAME=job_application_system

# LLM
# APP_LLM__PROVIDER=openai
# APP_LLM__MODEL=gpt-4o
# APP_LLM__API_KEY=your-openai-api-key-here

# For Ollama (local LLM)
APP_LLM__PROVIDER=ollama
APP_LLM__MODEL=llama3:8b-instruct
APP_LLM__API_BASE=http://localhost:11434

# Logging
APP_LOGGING__LEVEL=INFO
APP_LOGGING__FILE_PATH=logs/app.log

# Scraper
APP_SCRAPER__CONCURRENT_REQUESTS=5
APP_SCRAPER__REQUEST_TIMEOUT=30.0
# APP_SCRAPER__USE_PROXIES=true
# APP_SCRAPER__PROXIES=proxy1.example.com:8080,proxy2.example.com:8080

# Browser Automation
APP_BROWSER__HEADLESS=false
APP_BROWSER__BROWSER_TYPE=chrome

# Storage
APP_STORAGE__RESUME_DIR=resumes
APP_STORAGE__TEMPLATE_DIR=templates